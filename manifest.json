{
  "manifest_version": 3,
  "name": "Chess OCR Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension that uses OCR to recognize chess boards and provides suggestions.",
  "icons": [
    {
      "src": "icon16.png"
    },
    {
      "src": "icon32.png"
    },
    {
      "src": "icon48.png"
    },
    {
      "src": "icon128.png"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://www.chess.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/*"
      ],
      "js": [
        "node_modules/jsdom/lib/api.js",
        "node_modules/tesseract.js/src/Tesseract.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
