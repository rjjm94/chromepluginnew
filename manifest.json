{
  "manifest_version": 2,
  "name": "Chess Analysis Extension",
  "version": "1.0.0",
  "description": "Analyze chess positions with Tesseract OCR",
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon_48.png",
    "default_popup": "popup.html",
    "default_title": "Chess Analysis Extension"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/*"
      ],
      "js": [
        "node_modules/dom.js/src/index.js",
        "content.js",
        "node_modules/tesseract.js/dist/tesseract.min.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "node_modules/tesseract.js/dist/worker.min.js"
  ]
}
